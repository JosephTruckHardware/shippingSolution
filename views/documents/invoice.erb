<% ship_from = Address[shipment.shipping_from_address_id]%>
<% ship_to = Address[shipment.shipping_to_address_id]%>
<% billed_to = Address[shipment.billed_address_id]%>
<head>
  <title>Invoice for Shipment <%= shipment.id %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <style>
    /* Define the multi-line header */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: table-header-group;
      font-size: 16pt;
      font-weight: bold;
      text-align: center;
    }
    .header p {
      margin: 0;
      padding: 5pt 0;
    }
    /* Define the body of the document */
    .body {
      font-size: 12pt;
      margin-top: 80pt;
    }
    /* Define the page layout */
    @page {
      @top-right{
        content: "Page " counter(page) " of " counter(pages);
      }
      size: Letter portrait;
      margin: 0.5cm;
      @top {
        content: element(header);
        padding-top: 1cm;
      }
    }
  </style>
</head>
<body>
  <div class="header" id="header">
    <p>Commercial Invoice</p>
    <p>Ship From: <%= ship_from.name %></p>
    <p>Ship To: <%= ship_to.name %></p>
    <p>Billed To: <%= billed_to.name %></p>
  </div>
  <div class="body">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th><img src="https://www.truckhardware.ca/images/logo_ol.png" alt="logo" style="height: 50px;"></th>
          <th></th>
          <th>Commercial Invoice</th>
        </tr>
        <tr>
          <th></th>
        </tr>
        <tr>
          <th>Ship From</th>
          <th>Ship To</th>
          <th>Billed</th>
        </tr>
        <tr>
          <th><%= ship_from.name %></th>
          <th><%= ship_to.name %></th>
          <th><%= billed_to.name %></th>
        </tr>
        <tr>
          <th><%= ship_from.address_line_1 %></th>
          <th><%= ship_to.address_line_1 %></th>
          <th><%= billed_to.address_line_1 %></th>
        </tr>
        <tr>
          <% if ship_from.address_line_2 != nil %>
            <th><%= ship_from.address_line_2 %></th>
          <%end%>
          <% if ship_to.address_line_2 != nil %>
            <th><%= ship_to.address_line_2 %></th>
          <%end%>
          <% if billed_to.address_line_2 != nil %>
            <th><%= billed_to.address_line_2 %></th>
          <%end%>
        </tr>
        <tr>
          <th><%= ship_from.city %>, <%= ship_from.state_code %> <%= ship_from.country %></th>
          <th><%= ship_to.city %>, <%= ship_to.state_code %> <%= ship_to.country %></th>
          <th><%= billed_to.city %>, <%= billed_to.state_code %> <%= billed_to.country %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Test</td>
          <td>Test</td>
          <td>Test</td>
          <td>Test</td>
          <td>Test</td>
          <td>Test</td>
          <td>Test</td>
        </tr>
      </tbody>
    </table>
  </div>
</body>
