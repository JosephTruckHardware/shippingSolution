<table class="table">
	<thead>
		<tr>
			<th>Order ID</th>
			<th>Order Date</th>
			<th>Status</th>
			<th>Shipping To Address</th>
			<th>Shipping From Address</th>
			<th>Billed Address</th>
			<th>Required Date</th>
			<th>Tracking Number</th>
			<th>Carrier Name</th>
			<th>Service Name</th>
			<th>Shipped At</th>
            <th></th>
            <th></th>
            <th></th>
		</tr>
	</thead>
	<tbody>
		<% @shipments.each do |shipment| %>
			<tr>
				<td><%= shipment.order_id %></td>
				<td><%= shipment.order_date %></td>
				<td><%= shipment.status %></td>
				<td><%= shipment.shipping_to_address_id %></td>
				<td><%= shipment.shipping_from_address_id %></td>
				<td><%= shipment.billed_address_id %></td>
				<td><%= shipment.required_date %></td>
				<td><%= shipment.tracking_number %></td>
				<td><%= shipment.carrier_name %></td>
				<td><%= shipment.service_name %></td>
				<td><%= shipment.shipped_at %></td>
                <td><a href="/shipments/<%= shipment.id %>" class="btn btn-primary">View</a></td>
                <td><a href="/shipments/<%= shipment.id %>/edit" class="btn btn-secondary">Edit</a></td>
                <td>    
                    <form action="/shipments/<%= shipment.id %>" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete this shipment?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                </td>
			</tr>
		<% end %>
	</tbody>
</table>

<script>
	const deleteShipmentBtn = document.getElementById('deleteShipmentBtn');
	const deleteShipmentModal = new bootstrap.Modal(document.getElementById('deleteShipmentModal'));

	deleteShipmentBtn.addEventListener('click', () => {
	deleteShipmentModal.show();
	});
</script>