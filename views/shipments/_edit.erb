<div class="modal fade" id="editShipmentModal" tabindex="-1" aria-labelledby="editShipmentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shipmentDetailsModalLabel">Shipment Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/shipments/<%= @shipment.id %>" method="post">
          <input type="hidden" name="_method" value="put">
          <div class="form-group">
            <label for="order_id">Order ID</label>
            <input type="text" class="form-control" id="order_id" name="order_id" value="<%= @shipment.order_id %>">
          </div>
          <div class="form-group">
            <label for="order_date">Order Date</label>
            <input type="datetime-local" class="form-control" id="order_date" name="order_date" <% if @shipment.order_date %>value="<%= @shipment.order_date.strftime('%Y-%m-%dT%H:%M:%S') %>"<% end %>>
          </div>
          <% if @shipment.required_date %>
            <div class="form-group">
              <label for="required_date">Required Date</label>
              <input type="datetime-local" class="form-control" id="required_date" name="required_date" value="<%= @shipment.required_date.strftime('%Y-%m-%dT%H:%M:%S') %>">
            </div>
          <% end %>
          <div class="form-group">
            <label for="tracking_number">Tracking Number</label>
            <input type="text" class="form-control" id="tracking_number" name="tracking_number" value="<%= @shipment.tracking_number %>">
          </div>
          <div class="form-group">
            <label for="carrier_name">Carrier Name</label>
            <input type="text" class="form-control" id="carrier_name" name="carrier_name" value="<%= @shipment.carrier_name %>">
          </div>
          <% if @shipment.shipped_at %>
            <div class="form-group">
              <label for="shipped_at">Shipped At</label>
              <input type="datetime-local" class="form-control" id="required_date" name="required_date" value="<%= @shipment.shipped_at.strftime('%Y-%m-%dT%H:%M:%S') %>">
            </div>
          <% end %>
          <input class="btn btn-primary" value="Update" type="submit">
        </form>
      </div>
    </div>
  </div>
</div>
